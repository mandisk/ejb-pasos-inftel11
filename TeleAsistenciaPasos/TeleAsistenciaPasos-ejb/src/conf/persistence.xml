<?xml version="1.0" encoding="UTF-8"?>
<persistence version="2.0" xmlns="http://java.sun.com/xml/ns/persistence" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://java.sun.com/xml/ns/persistence http://java.sun.com/xml/ns/persistence/persistence_2_0.xsd">
  <persistence-unit name="TeleAsistenciaPasos-ejbPU" transaction-type="JTA">
    <provider>org.eclipse.persistence.jpa.PersistenceProvider</provider>
    <jta-data-source>jdbc/sample</jta-data-source>
    <class>org.inftel.pasos.entity.Disponibilidad</class>
    <class>org.inftel.pasos.entity.Empleado</class>
    <class>org.inftel.pasos.entity.Familiar</class>
    <class>org.inftel.pasos.entity.Incidencia</class>
    <class>org.inftel.pasos.entity.Persona</class>
    <class>org.inftel.pasos.entity.TipoIncidencia</class>
    <class>org.inftel.pasos.entity.Turno</class>
    <class>org.inftel.pasos.entity.Usuario</class>
    <class>org.inftel.pasos.entity.Mensaje</class>
    <exclude-unlisted-classes>true</exclude-unlisted-classes>
    <shared-cache-mode>NONE</shared-cache-mode>
    <properties>
      <property name="eclipselink.ddl-generation" value="drop-and-create-tables"/>
    </properties>
  </persistence-unit>
</persistence>
